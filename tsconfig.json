{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2017",
    "jsx": "preserve",
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": "./",
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true, // 不对第三方依赖类型检查 ，element-plus 生产打包报错
    "types": [
      "element-plus/global"
    ],
    "allowJs": false,
    "strict": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true, // 默认导入
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]

}
